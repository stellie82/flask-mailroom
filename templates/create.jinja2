{% extends 'base.jinja2' %}

{% block subtitle %}Create a New Donation (existing donor){% endblock subtitle %}

{% block content %}
<form method='POST'>
    <label for='name'>Donor Name: </label><input id='name' type='text' name='name'><br>
    <label for='amount'>Donation Amount: </label><input type='number' id='amount' name='amount'><br>
    <input type='submit' value='Submit'>

    {% if error %}<p><span class='error'>{{ error }}</p>{% endif %}
</form>
{% endblock content %}